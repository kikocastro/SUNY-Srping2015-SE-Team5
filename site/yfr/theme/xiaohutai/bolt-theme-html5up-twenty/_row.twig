<section class="wrapper style1 container special">
    <div class="row">
        {% setcontent items = theme.general.row limit 3 %}
        {% for item in items %}
        <div class="4u">
            <section>
                <header>
                    <h3>{{ item.title }}</h3>
                </header>
                {{ item.teaser }}
                <footer>
                    <ul class="buttons">
                        <li><a href="{{ item.link }}" class="button small">Read More</a></li>
                    </ul>
                </footer>
            </section>
        </div>
        {% endfor %}
    </div>
</section>
